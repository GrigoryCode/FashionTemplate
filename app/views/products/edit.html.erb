<h1>Edit Page</h1>

<%= simple_form_for @product, html: {multipart: true} do |f| %>
  <%= f.select :category_id, @categories, {}, { class: "btn btn-outline-secondary" } %>
  <%= f.file_field :product_img %>
  <%= f.input :title, label: "Product Title" %>
  <%= f.input :description %>
  <%= f.button :submit, class: "btn btn-outline-secondary" %>
<% end %>