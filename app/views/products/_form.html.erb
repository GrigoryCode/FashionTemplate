<%= simple_form_for @product do |f| %>
  <%= select_tag(:category_id, options_for_select(@categories), prompt: 'Select Category', class: 'btn btn-outline-secondary dropdown-toggle') %>
  <%= f.input :title, label: 'Product Title' %>
  <%= f.input :description %>
  <%= f.button :submit, class: 'btn btn-outline-secondary' %>
<% end %>